pipeline {
    agent any
    tools {
      jdk 'Java17'
      maven 'Maven3'
    }
  stages{
     stage("Cleanup Workspace"){
           steps {
             cleanWs()
           }
     }
     
     stage("Checkout from SCM") {
       steps {
         git branch: 'main', credentials: 'github', URL: 'https://github.com/kamleshbelote/register-app.git'
       }
     }
     
     stage("Build Application"){
       steps {
         sh "mvn clean package"
       }
     }
     
     stage("Test Application"){
       steps {
         sh "mvn test"
       }
     }
     
     stage("Test Application"){
       steps {
         sh "mvn test"
       }
     }

    
  }
}
